{
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "coc.preferences.jumpCommand": "edit",
    "languageserver": {
        "cquery": {
            "enable": true,
            "command": "cquery",
            "args": ["--log-file=/tmp/cq.log"],
            "filetypes": ["c", "cpp"],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".git"
            ],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery"
            }
        }
    }
}
